.section--primary
  .container
    %h1= title("#{@party.name} - #{t('.title', current: t('current').capitalize, member_plural: t('member_plural'))}")

    = render partial: 'pugin/components/navigation-letter', locals: { route_symbol: :party_members_current_a_z_letter_path, route_args: [@party.graph_id] }

    - if Parliament::Utils::Helpers::FlagHelper.dissolution?
      = render partial: 'shared/dissolution_message'
    - elsif Parliament::Utils::Helpers::FlagHelper.election?
      = render partial: 'shared/election_message'

%section#content
  .container
    = render partial: "pugin/elements/list", locals: {item_type: "people", data: @people}
